{
    "name": "neuraldeck",
    "version": "0.1.0",
    "description": "Tu centro de mando de IA invisible - Accede a ChatGPT, Gemini, Claude y m√°s desde una interfaz flotante",
    "type": "module",
    "main": "dist-electron/main.cjs",
    "author": "NeuralDeck Team",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:win": "tsc && vite build && electron-builder --win",
        "build:linux": "tsc && vite build && electron-builder --linux",
        "build:mac": "tsc && vite build && electron-builder --mac",
        "preview": "vite preview",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "prepare": "husky install"
    },
    "dependencies": {
        "@tanstack/react-query": "^5.90.12",
        "@trpc/client": "^11.8.0",
        "@trpc/react-query": "^11.8.0",
        "@trpc/server": "^11.8.0",
        "clsx": "^2.1.1",
        "electron-store": "^8.2.0",
        "electron-trpc": "^0.7.1",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^3.4.0",
        "zod": "^4.2.1",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@types/node": "^20.10.4",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.5.0",
        "autoprefixer": "^10.4.16",
        "electron": "^31.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^9.0.0",
        "lint-staged": "^15.2.0",
        "postcss": "^8.4.32",
        "prettier": "^3.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.6",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.15.5",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vitest": "^1.5.0"
    },
    "build": {
        "appId": "com.neuraldeck.app",
        "productName": "NeuralDeck",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "public/icon.png",
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "public/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "public/icon.png",
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
